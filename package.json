{
  "name": "5mind-desktop",
  "version": "1.1.5",
  "main": "main.js",
  "description": "5Mind Desktop Application",
  "author": {
    "name": "EchoRavenX",
    "email": "echo@ravenx.com"   
  },
  "homepage": "https://5mind.com",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-deb": "electron-forge make --platform linux --arch x64 --targets=@electron-forge/maker-deb",
    "build:linux": "electron-builder --linux appimage deb --x64"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/maker-flatpak": "^7.10.2",
    "electron": "39.1.2",
    "electron-builder": "^26.0.12"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "executableName": "5mind-desktop",
        "icon": "./icon-256.png",
        "extraResource": [
          "./loading.html",
          "./error.html",
          "./preload.js",
          "./icon-256.png"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "bin": "5mind-desktop",
              "name": "5mind-desktop",
              "productName": "5mind",
              "genericName": "Chat & Voice App",
              "categories": [
                "Network",
                "InstantMessaging",
                "Chat"
              ],
              "homepage": "https://5mind.com",
              "description": "5Mind Desktop Application.",
              "maintainer": "EchoRavenX <echo@ravenx.com>",
              "section": "net",
              "priority": "optional",
              "icon": "./icon-256.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-flatpak",
          "config": {
            "id": "com.5mind.desktop",
            "runtime": "org.freedesktop.Platform",
            "runtime-version": "25.08",
            "sdk": "org.freedesktop.Sdk",
            "command": "5mind-desktop",
            "finish-args": [
              "--share=network",
              "--filesystem=home",
              "--socket=wayland"
            ]
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.5mind.desktop",
    "productName": "5Mind Desktop",
    "executableName": "5mind-desktop",
    "asar": false,
    "extraResources": [
      "./loading.html",
      "./error.html",
      "./preload.js",
      "./icon-256.png"
    ],
    "linux": {
      "target": [
        "appimage",
        "deb"
        "pacman"
      ],
      "category": "Network;InstantMessaging;Chat",
      "description": "5Mind Desktop Application.",
      "icon": "./icon-256.png",
      "maintainer": "EchoRavenX <echo@ravenx.com>"
    },
    "fileAssociations": [],
    "directories": {
      "output": "dist"
    }
  }
}
